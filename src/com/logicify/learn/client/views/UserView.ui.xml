<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <fieldset>
            <legend>Add/Edit User</legend>
            <label>First Name: </label><g:TextBox ui:field='firstName'></g:TextBox><br/>
            <label>Last Name: </label><g:TextBox ui:field="lastName"></g:TextBox><br/>
            <label>e-mail:</label><g:TextBox ui:field="email"></g:TextBox><br/>
            <g:Button ui:field="okButton">Save</g:Button>
            <g:Button ui:field="updateButton">Update</g:Button>
            <g:Button ui:field="clearButton">Clear</g:Button>
        </fieldset>
    </g:HTMLPanel>
</ui:UiBinder>